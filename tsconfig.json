{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/[locale]/page.js", "src/app/[locale]/layout.jsx", "src/app/payment-success/page.jsx", "src/app/api/create-payment-intent/route.js", "src/app/_components/CheckoutPage.jsx", "src/i18n/routing.js", "src/app/[lang]/_components/main-layout.jsx"],
  "exclude": ["node_modules"]
}
